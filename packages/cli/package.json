{
  "name": "@star-rail/cli",
  "version": "0.1.0",
  "description": "星穹铁道剧情复现计划 - CLI 表现层",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "star-rail": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@star-rail/types": "workspace:*",
    "@star-rail/infrastructure": "workspace:*",
    "@star-rail/core": "workspace:*",
    "reflect-metadata": "^0.2.1",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "cli-table3": "^0.6.3",
    "boxen": "^7.1.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
